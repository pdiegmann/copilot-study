{
  "name": "sst-copilot-study",
  "private": true,
  "version": "1.2.8",
  "type": "module",
  "scripts": {
    "dev": "DATABASE_URL=\"$PWD/data.private/config/main.db\" DATA_ROOT=$PWD/data.private SETTINGS_FILE=$PWD/data.private/config/settings.yaml bun --bun x vite dev",
    "build": "bun run prepare && bun --bun x vite build",
    "preview": "bun --bun x vite preview",
    "serve": "bun --bun ./build/index.js",
    "prepare": "bun --bun x svelte-kit sync || echo ''",
    "docker:rm-container": "docker kill sst 2>/dev/null; docker rm --force sst 2>/dev/null",
    "docker:build:dev": "docker build -t sst .",
    "docker:run": "docker run -e LOG_LEVEL=info --name sst --mount type=bind,src=\"$(pwd)\"/data.private/,dst=/home/bun/data/ sst",
    "docker:runrm": "bun run docker:rm-container; bun run docker:run",
    "docker:dev": "bun run docker:rm-container; bun run docker:build:dev; bun run docker:run",
    "check": "bun --bun x svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun --bun x svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "bun --bun x prettier --write .",
    "lint": "bun --bun x prettier --check . && eslint .",
    "gql:codegen": "bun --bun x --env-file=.env graphql-codegen --config ./codegen.ts --overwrite",
    "auth:generate": "bun --bun x @better-auth/cli generate --config src/lib/auth.ts --output src/lib/server/db/auth-schema.ts -y",
    "auth:update": "bun run auth:generate && bun run db:update",
    "db:update": "DATABASE_URL=\"$PWD/data.private/config/main.db\" bun drizzle-kit generate && bun run db:migrate && bun run db:push",
    "db:push": "DATABASE_URL=\"$PWD/data.private/config/main.db\" bun --bun x drizzle-kit push",
    "db:generate": "DATABASE_URL=\"$PWD/data.private/config/main.db\" bun --bun x drizzle-kit generate",
    "db:migrate": "DATABASE_URL=\"$PWD/data.private/config/main.db\" bun --bun x drizzle-kit migrate",
    "db:studio": "DATABASE_URL=\"$PWD/data.private/config/main.db\" bun --bun x drizzle-kit studio",
    "crawler:start": "bun --bun run src/crawler/cli.ts",
    "supervisor": "bun --bun run src/subvisor/simple-supervisor.ts",
    "start": "bun run supervisor start",
    "start:all": "bun run supervisor start website,crawler",
    "start:website": "bun run supervisor start website",
    "start:crawler": "bun run supervisor start crawler",
    "start:sequence": "bun run supervisor start website && bun run supervisor start crawler"
  },
